


<div id="contact-modal" class="modal fade">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"><%= action_name %> Evento</h4>
      </div>

  <div class="alert alert-danger" style="display:none">
    <ul>
    
    </ul>
  </div>
      <div class="modal-body">

     <%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-9">
    <%= form.label "Fecha del Evento" %><br>
   <div class="form-group date_select">
         
              <%= form.datetime_select :event_date,{
                        :start_year =>
              Time.now.year,
                        :end_year => 1900,
                        :use_month_names => ['01', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre'],
                        :use_short_month => true,
                        :order => [:day, :month, :year],
                        :prompt => {:month => 'Mes', :day => 'Dia', :year => 'AÃ±o'}},
                        {:class => 'year form-control line1 required',
                        :id => 'event_date_event' , :title => "Es un Campo Obligatorio" }
                      %>
            </div>
  </div>
  <br>
  <div class="col-md-3">
       <div class="form-group">
    <%= form.label "Solo Audio" do %>
      <i class="fa fa-volume-up" style = "font-size:20px" aria-hidden="true"></i>
      Solo Audio
    <%end%>
    <%= form.check_box :event_type, style: "margin-left:10px" %>
  </div>
  </div>
</div>
    



  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name, class: "form form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :event_description, class: "form form-control" %>
  </div>


  <div class="form-group">
    <%= form.label :backgroud_event %>
    <%= form.file_field :backgroud_event, id: :event_backgroud_event, class: "form form-control" %>
  </div>


  <div class="row">
    <div class="col-md-6">
       <div class="form-group">
    <%= form.label :video %>
    <%= form.file_field :video, id: :event_video, class: "form form-control" , accept: "video/mp4" %>
  </div>
    </div>
        <div class="col-md-6">
       <div class="form-group">
    <%= form.label :ppts %>
    <%= form.file_field :ppts, id: :event_ppts, class: "form form-control", accept: "application/pdf" %>
  </div>

    </div>
  </div>
 


 


   <%= form.hidden_field :account_id, :value => @account.id %>
 <%= form.hidden_field :admin_user,:value => current_user.admin_user %>
 <%= form.hidden_field :user_id,:value => current_user.id %>
     
 <%= form.submit "Guardar" , class: "btn btn-primary" %>
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <% end %>
  

  </div>

  </div>
