
        <canvas id="myChart" width="400" height="150"></canvas>





<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.bundle.js" type="text/javascript" charset="utf-8"></script>
<script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: [<%@event.live_stats.order(created_at: :asc).each do |event| %>"<%=event.state_time.to_s(:time)%>",<%end%>],
        datasets: [{
            label: '# of Votes',
            data: [<%@event.live_stats.order(created_at: :asc).each do |event| %>"<%=event.type_stat%>",<%end%>],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                     max: 30,
                      min: 0,
                      stepSize: 5
                }
            }],
              xAxes: [{
  ticks: {
    autoSkip: true,
    maxTicksLimit: 10,
    stepSize: .2
  }
}]

        }
    }
});
</script>