<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date event</th>
      <th>Name</th>
      <th>Description</th>
      <th>State</th>
      <th>Backgroud event</th>
      <th>Video</th>
      <th>Ppts</th>
      <th>User</th>
      <th>Admin user</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date_event %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.state %></td>
        <td><%= event.backgroud_event %></td>
        <td><%= event.video %></td>
        <td><%= event.ppts %></td>
        <td><%= event.user_id %></td>
        <td><%= event.admin_user %></td>
        <td><%= event.account_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

