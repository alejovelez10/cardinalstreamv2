<div class="container  margin-top-40">
   <div class="row" >
      <div class = "row title-table">
         <div class = "col-md-6">
            <p class="title-h2">Roles <span class="label label-primary"><%=@rols.count%></span> <span style = "font-size:12px;margin-left:20px;"> <%= page_entries_info @rols, :entry_name => 'Usuarios' %></span> </p>
         </div>
         <div class = "col-md-4 paginate text-left title-table1">
            <%= will_paginate @rols%>
         </div>
         <div class = "col-md-2">
            <%= link_to 'Nuevo', new_rol_path, remote: true, class: "btn btn-primary"  %>
         </div>
      </div>
      <hr class="hr">
      <div class = "row">
         <table class="table">
            <thead>
               <tr class = "tr-table">
                  <th ></th>
                  <th ></th>
                  <th colspan="4" class="text-center" style="border-left:1px solid gray;border-right :1px solid gray">Evento</th>
                  <th colspan="4" class="text-center" style="border-right:1px solid gray">Administracion</th>
                  <th ></th>
               </tr>
               <tr class = "tr-table">
                  <th>Nombre</th>
                  <th>Descripcion</th>
                  <th style="border-left:1px solid gray">Crear</th>
                  <th >Editar</th>
                  <th>Eliminar</th>
                  <th style="border-right:1px solid gray">Administrar</th>
                  <th>Estadisticas</th>
                  <th>Cuenta</th>
                  <th>Usuarios</th>
                  <th style="border-right:1px solid gray">Roles</th>
                  <th ></th>
               </tr>
            </thead>
            <tbody>
               <% @rols.each do |rol|%>
               <tr>
                  <td><%= rol.name %></td>
                  <td><%= rol.description %></td>
                  <td><%= get_state(rol.create_event).html_safe %></td>
                  <td><%= get_state(rol.edit_event).html_safe %></td>
                  <td><%= get_state(rol.delete_event).html_safe %></td>
                  <td><%= get_state(rol.admin_event).html_safe %></td>
                  <td><%= get_state(rol.admin_stats).html_safe %></td>
                  <td><%= get_state(rol.admin_config).html_safe %></td>
                  <td><%= get_state(rol.admin_users).html_safe %></td>
                  <td><%= get_state(rol.rol).html_safe %></td>
                  <td>  <%= link_to  edit_rol_path(rol),remote: true,  :class => "btn btn-warning" do %>
                     <i class="fa fa-pencil" style = "font-size:20px;" aria-hidden="true"></i>
                     <% end %>
                     <%= link_to  rol_path(rol),method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
                     <i class="fa fa-trash" style = "font-size:20px;" aria-hidden="true"></i>
                     <% end %>
                  </td>
               </tr>
               <%end%>
            </tbody>
         </table>
      </div>
   </div>
</div>

<style>
.evento
{
  background: #c9c9c9
}

.admin
{

}

td, th
{
  text-align: center;
}

  
</style>