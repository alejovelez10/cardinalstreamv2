

<div id="contact-modal" class="modal fade">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
        <h4 class="modal-title">Crear Usuario</h4>
      </div>
<%= form_with(model: @rol, local: true) do |form| %>
  <% if @rol.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rol.errors.count, "error") %> prohibited this rol from being saved:</h2>

      <ul>
      <% @rol.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="modal-body">
 <%= form.hidden_field :admin_user , :value => current_user.admin_user %>
  <%= form.hidden_field :user_id ,:value =>  current_user.id %>
 

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :rol_name  , class: "form form-control" %>
  </div>
<br>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :rol_description  , class: "form form-control"%>
  </div>
<hr>
<div class="row">


<div class="col-md-12">
   <hr>
    
   <h3>Eventos</h3>
   <br>
  </div>
 <br>
    <div class="col-md-3">
    <%= form.label "Crear" %>
    <%= form.check_box :create_event, id: :rol_create_event , class: "form form-control ck" %>
  </div>

    <div class="col-md-3">
    <%= form.label "Editar" %>
    <%= form.check_box :edit_event, id: :rol_edit_event , class: "form form-control ck" %>
  </div>

 

   <div class="col-md-3">
    <%= form.label "Eliminar" %>
    <%= form.check_box :delete_event, id: :rol_delete_event , class: "form form-control ck" %>
  </div>

  <div class="col-md-3">
    <%= form.label "Administrar" %>
    <%= form.check_box :admin_event, id: :rol_admin_event , class: "form form-control ck" %>
  </div>

   <div class="col-md-3" style="margin-top: 20px;">
    <%= form.label "Lives" %>
    <%= form.check_box :admin_live, id: :rol_delete_event , class: "form form-control ck" %>
  </div>

  <div class="col-md-3" style="margin-top: 20px;">
    <%= form.label "Ondemands" %>
    <%= form.check_box :admin_ondemand, id: :rol_admin_event , class: "form form-control ck" %>
  </div>

<div class="col-md-12">
   <hr>
 
   <h3>Administracion</h3>
   <br>
  </div>
  <div class="col-md-3">
    <%= form.label "Estadisticas" %>
    <%= form.check_box :admin_stats, id: :rol_admin_stats , class: "form form-control ck" %>
  </div>

  <div class="col-md-3">
    <%= form.label "Cuenta" %>
    <%= form.check_box :admin_config, id: :rol_admin_config , class: "form form-control ck" %>
  </div>

  <div class="col-md-3">
    <%= form.label "Usuarios" %>
    <%= form.check_box :admin_users, id: :rol_admin_users , class: "form form-control ck" %>
  </div>

   <div class="col-md-3">
    <%= form.label "Roles" %>
    <%= form.check_box :rol, id: :rol_admin_users , class: "form form-control ck" %>
  </div>
</div>
<hr>
<br>
  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-primary btn-block" %>
  </div>
  </div>
<% end %>
</div>
</div>
</div>

