

<div class="row sign_form">

<div class="col-md-4 col-md-offset-2 login1" style="padding-top: 50px;">
<p class = "logop text-center" style = "color:#187191;   font-size: 25px;font-weight: bold"><img style= "width:40px;position: relative;
    top: -3px;left: -5px;" id="slack" src="/../../images/cardinal_solo.png"><span sytle = "">cardnal</span><span style = "font-style:italic;">stream</span></p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


   <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true , :class => 'form-control'%>
  </div>

 
<div class="form-group">
    <%= f.label "Dominio" %>
    <%= f.text_field :account_domain , :class => 'form-control'%>
  </div>

  
  
  <%= f.hidden_field :is_account, :value => true %>
 
  



   <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" , :class => 'form-control'%>
  </div>

   <div class="form-group">
    <%= f.label "Confirmar Contraseña" %>
    <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'form-control'%>
  </div>


   <div class="form-group">
    <%= f.submit "Crear Cuenta", :class => 'btn btn-primary btn-block is'  %>
  </div>
<% end %>

<div class="col-md-10 col-md-offset-1 text-center color-gray" style="margin-top:10px;">
Ya estas Registrado <%= link_to "Inicia Sesión", new_session_path(resource_name), class:"linka" %><br />
</div>
