<!DOCTYPE html>
<html>
   <head>
      <title>CardinalStreamV2</title>
      <%= csrf_meta_tags %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <link href="https://fonts.googleapis.com/css?family=Days+One" rel="stylesheet">
      <style rel="stylesheet" type="text/css" href= "css/offline-language-spanish.css"> </style>
      <style rel="stylesheet" type="text/css" href= "css/offline-theme-default.css"></style>
      <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
      <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
      <meta name="turbolinks-cache-control" content="no-cache">
      <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
   </head>
   <body class = "admin">
      <nav class="navbar navbar-default second-navbar">
         <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
               <a class="navbar-brand" style = "background:#0d3d4d;height:70px;" href="#">
                  <p class = "logop text-center" style = "color:white;   font-size: 20px;font-weight: bold"><img style= "width: 40px;
    position: relative;
    top: -7px;
    left: -5px;
    margin-top: 10px;
    border-radius: 25px;
                     " id="slack" src="/../../images/cardinal_solo.png"><span style = "font-size:20px;">Cardinal</span><span style = "font-size:30px;color:#0f99cb;font-family: 'Shadows Into Light', cursive;">Stream</span></p>
               </a>
               <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
               <span class="sr-only">Toggle navigation</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
               <ul class="nav navbar-nav">
                  <li  class="li"><%= link_to  admin_events_path,:class => "indicadores", style:"padding: 24px;" do %><i class="fa fa-video-camera" style="font-size:20px;color:white;    padding-left: 0px;
                        padding-right: 10px;"  aria-hidden="true"></i> <span style="font-size:15px">Eventos </span>
                     
                     <% end %>
                  </li>
                  <%if current_user.rol.admin_stats%>
                  <li  class="li"><%= link_to  stats_index_path,:class => "indicadores" , style:"padding: 24px;" do %><i class="fa fa-bar-chart" style="font-size:20px;color:white;    padding-left: 10px;
                        padding-right: 10px;" aria-hidden="true"></i> <span style="font-size:15px">Estadisticas</span>
                     
                     <% end %>
                  </li>
                  <% end %>
                  <%if has_configuracion%>
                  <li class="dropdown"  >
                     <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="padding:24px"> <i class="fa fa-cog color-gray icon"  style="font-size:20px;color:white; aria-hidden="true"></i> Configuración  <span class="caret"></span></a>
                     <ul class="dropdown-menu">
                        <%if current_user.rol.admin_users%>
                        <li ><%= link_to "Usuarios", users_index_path, style: "color:gray !important" %></li>
                        <%end%>
                        <%if current_user.rol.rol%>
                        <li><%= link_to "Roles", rols_path, style: "color:gray !important" %></li>
                        <%end%>
                        <%if current_user.rol.admin_config%>
                        <li><%= link_to "Cuenta", account_path(get_account), style: "color:gray !important" %></li>
                        <%end%>
                     </ul>
                  </li>
                  <%end%>
               </ul>
               <ul class="nav navbar-nav navbar-right">
                  <!--<li class="dropdown" style= "margin-top: 10px;" >
                     <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="fa fa-cog color-white icon" aria-hidden="true"></i> Configuración<span class="caret"></span></a>
                     <ul class="dropdown-menu">
                     
                        <li><%= link_to  account_path(get_account),:class => "indicadores" do %>
                           <span class="fa fa-sign-out" style = "color:gray"></span>
                           <span style = "color:gray!important">Ver Cuenta</span>
                           <% end %></li>
                     
                     </ul>
                     </li>-->
                  <li style = "height: 51px;margin-left: 20px;margin-right: 15px;    margin-top: 10px;" ></li>
                  <li><%=image_tag get_accountc.logo_url, style:"width:160px;height:70px;"  if get_accountc.logo  %></li>
                  <li class="dropdown" style= "margin-top: 10px;">
                     <a href="#" class="dropdown-toggle user" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%=current_user.email  %> <span style = "color:white" class="caret"></span></a>
                     <ul class="dropdown-menu">

                        <li> <%= link_to  destroy_user_session_path, :method => :delete,:class => "indicadores" do %>
                           <span class="fa fa-sign-out" style = "color:gray"></span>
                           <span style = "color:gray!important">Cerrar Sesión</span>
                           <% end %>
                        </li>
                        <li> <%= link_to  edit_user_registration_path(current_user.id), :class => "indicadores" do %>
                           <span class="fa fa-sign-out" style = "color:gray"></span>
                           <span style = "color:gray!important" >Ver Usuario</span>
                           <% end %>
                        </li>
                     </ul>
                  </li>
               </ul>
               <!--<form class="navbar-form navbar-left">
                  <div class="form-group">
                     <input type="text" class="form-control" placeholder="Search">
                  </div>
                  <button type="submit" class="btn btn-default">Submit</button>
                  </form>-->
            </div>
            <!-- /.navbar-collapse -->
         </div>
         <!-- /.container-fluid -->
      </nav>
      <br>
      <%= yield %>
   </body>
</html>
<style>
   .activemenu {
   background: #1e253c;
   padding: 19px;
   }
</style>