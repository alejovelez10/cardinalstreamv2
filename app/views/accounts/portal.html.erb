
<%if @psw || !@account.has_psw%>
<div class="container-fluid">
  

  <div class="row">
      <div class="col-md-12 blockhead ">
       <div class="col-md-2 logo text-center">
         <img src="<%=@account.logo_url%>" alt="">
      </div>
     
         <div class="col-md-6 name">
          <p style="font-size: 20px;">EVENTOS ONDEMAND</p>

         </div>
          <div class="col-md-4 social hidden-sm hidden-xs">
           <%= form_tag portal_path, :method => 'get'  do %>
              <%= text_field_tag :search, params[:search], style: "height: 33px;
    border-radius: 5px;color:gray"%>
          <%= submit_tag "Buscar", class: "btn btn-primary",:name => nil  %>
        <% end %>
         </div>
      </div>
   </div>
<br><br>
<div class="row eventos">
<%@events.each do |event|%>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
    <%if !event.event_type%>
      <img src="../../uploads/event/video/<%=event.id%>/screamshot.jpg" alt="...">
    <%else%>
      <img src="../../images/audio.jpg" alt="...">
    <%end%> 
      <div class="caption">
        <h5 style= "color:gray"><%= event.name%></h5>


        
        <div class="row">
          <div class="col-md-4">
                   <%= link_to "Ver", portal_show_path(event.id), class: "btn btn-primary" , data: { turbolinks: false }%>
          </div>
          <div class="col-md-8 text-right views-event">
            <p><i class="fa fa-eye" aria-hidden="true"></i> <%=event.stats.count%>
</p>
          </div>
        </div>

        
      </div>
    </div>
  </div>
  <%end%>
</div>
</div>
<%else%>
<div class="row">
      <div class="col-md-12 blockhead ">
       <div class="col-md-2 logo text-center">
         <img src="<%=@account.logo_url%>" alt="">
      </div>
     
         <div class="col-md-6 name">
          <p style="font-size: 20px;">EVENTOS ONDEMAND</p>

         </div>
          <div class="col-md-4 social hidden-sm hidden-xs">
     
         </div>
      </div>
   </div>
<div class="row">
<br>

<div class="col-md-4 col-md-offset-4" style="margin-top:150px;">
 <p>Este contenido es restringido. Para ingresar escriba la contraseña a continuación:
</p>
   <%= form_tag portal_login_path, method: :post do %>
    <%= text_field_tag :cookie , nil, style: "    height: 34px;", placeholder: "Ingrese contraseña"%>
    <%= submit_tag "Ingresar", class: "btn btn-primary"%>
 <%end%>
</div>
  
</div>

<%end%>

