<% if @event.state == 1 || @event.state == 4 %>

    <% if viewer_signed_in? || !@event.has_register%>
  
    <%if @event.state == 4%>
        <%if @event.event_type%>
            <%= render "ondemand_audio", event: @event, array: @array, count: @count, sync: @sync%>
        <%else%>
            <%= render "ondemand_video", event: @event, array: @array,  count: @count, sync: @sync%>
        <%end%>
    <%else%>
         <%if @event.event_type%>
            <%= render "live_audio", event: @event, array: @array%>
        <%else%>
            <%= render "live_video", event: @event, array: @array%>
        <%end%>
    <%end%>    

    <%else%>
        <%= render "login" , event: @event%>
    <% end %>

   <%else%>
        <%= render "expectation" , event: @event%>
    <% end %>