<script src="https://js.pusher.com/4.1/pusher.min.js"></script>
<script>
  
   var pusher = new Pusher('194f0bfe827f047fcf64', {
     cluster: 'us2',
     encrypted: true
   });

    var channel = pusher.subscribe('my-channel-msg');
   channel.bind('msg', function(data) {
    a = data.message

           if (a == 2)
           {
                  $('.live-in').show();
                  $('.live-prox').hide();
                  $('.exp-in').hide();
            }
            else if (a == 1)
            {
                  
                  $('.live-prox').show();
                  $('.live-in').hide();
                  $('.exp-in').hide();

            }     

           

           

   });

</script>